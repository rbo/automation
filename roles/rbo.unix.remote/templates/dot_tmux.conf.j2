set -g status-left-length 30

# Set Default
set -g prefix C-b
bind b send-prefix


{% if 'workstation' in group_names %}
# Set prefix to Ctrl-Space
unbind C-b
set -g prefix C-Space
bind Space send-prefix

set -g status-left '[#{host_short}|space] '
set -g status-bg colour17
set -g status-fg white
{% else %}
{% if tmux_version| default(1) == 1 %}
set -g status-left '[{{ inventory_hostname }}|b] '
{% else %}
set -g status-left '[#{host_short}|b] '
{% endif %}
set -g status-bg colour52
set -g status-fg white
{% endif %}
set -g pane-border-fg blue
set -g pane-border-bg default
set -g pane-active-border-fg red
set -g pane-active-border-bg default


bind-key -n C-t new-window
bind-key -n C-[ previous-window
bind-key -n C-] next-window

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf \; display "Reloading config..."

# quick pane cycling
#unbind ^A
#bind ^A select-pane -t :.+
#
#
set-option -g allow-rename off

# Disable Escape
{% if tmux_version | default(1) == 1 %}
# For tmux 1.8
unbind-key -n Escape
{% else %}
set -s escape-time 0
unbind -T root Escape
{% endif %}

{% if tmux_version | default(1) != 1 %}
# Disable mouse
set -g mouse off
{% endif %}
